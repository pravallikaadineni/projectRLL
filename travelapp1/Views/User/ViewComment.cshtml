@model IEnumerable<travelapp1.Models.COMMENT>

@{
    ViewBag.Title = "ViewComment";
}

<h2>ViewComment</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CommentText)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.rating)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PlaceId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserId)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CommentText)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.rating)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PlaceId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserId)
            </td>
            <td>

                @Html.ActionLink("AddComment", "Commenting", new { id = item.PlaceId }, new { @class = "btn btn-primary" })


                @Html.ActionLink("Delete", "DeleteComment", new { id = item.CommentId }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>
